<% if logged_in? %>
	<script type="text/javascript">
    window.location.href="/usuarios/<%=current_usuario.id%>"  // put your correct path in a string here
  </script>
	<% else %>

<% provide(:title, "Log in") %>

<div class="container">
	<div class="row">
		<div class="panel-heading">
	               <div class="panel-title text-center">

	               		<h1 class="title">Login</h1>
	               		<hr />
	               	</div>
	            </div> 
				<div class="main-login main-center">
					<%= form_for(:session,url:login_path) do |f| %>
						

						<div class="form-group">
							<label for="name" class="cols-sm-6 control-label">Usuario</label>
							<div class="cols-sm-4">
								<div class="input-group">
									<span class="input-group-addon"><i class="glyphicon glyphicon-user" aria-hidden="true"></i></span>
									<%= f.text_field :name, class: 'form-control'%>
									
								</div>
							</div>
						</div>

						<div class="form-group">
							<label for="email" class="cols-sm-6 control-label">Contrase√±a</label>
							<div class="cols-sm-6">
								<div class="input-group">
									<span class="input-group-addon"><i class="glyphicon glyphicon-lock" aria-hidden="true"></i></span>
									<%= f.password_field :password, class: 'form-control' %>
								</div>
							</div>
						</div>

						

						<div class="form-group ">
							<%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block login-button" %>
						</div>
					<% end %>
					
				</div>
	</div>
</div>
<%end%>